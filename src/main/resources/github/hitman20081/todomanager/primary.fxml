<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.hitman20081.todomanager.PrimaryController">
    <Label layoutX="14.0" layoutY="14.0" text="Task Manager" />

    <TextField fx:id="taskNameField" layoutX="14.0" layoutY="40.0" promptText="Task Name" />
    <TextField fx:id="taskDescriptionField" layoutX="14.0" layoutY="70.0" promptText="Task Description" />

    <ChoiceBox fx:id="priorityChoiceBox" layoutX="14.0" layoutY="100.0" />
    <ComboBox fx:id="sortComboBox" layoutX="300.0" layoutY="14.0" onAction="#handleSortSelection" />
    <DatePicker fx:id="dueDatePicker" layoutX="150.0" layoutY="100.0" promptText="Select Due Date" />

    <Button layoutX="14.0" layoutY="140.0" text="Add Task" onAction="#addTask" />
    <Button layoutX="100.0" layoutY="140.0" text="Edit Task" onAction="#editTask" />
    <Button layoutX="180.0" layoutY="140.0" text="Delete Task" onAction="#deleteTask" />
    <Button layoutX="260.0" layoutY="140.0" text="Mark as Completed" onAction="#markTaskAsCompleted" />

    <!-- Add TextField for adding comments -->
    <TextField fx:id="commentField" layoutX="620.0" layoutY="360.0" promptText="Add a comment" />
    <TextField fx:id="editCommentInput" layoutX="620.0" layoutY="400.0" promptText="Edit comment" />
    <ListView fx:id="commentsListView" layoutX="520.0" layoutY="180.0" prefHeight="180.0" prefWidth="250.0" />
    <Button layoutX="520.0" layoutY="360.0" text="Add Comment" onAction="#handleAddComment" />
    <Button layoutX="520.0" layoutY="400.0" text="Edit Comment" onAction="#handleEditComment" />

    <ListView fx:id="taskListView" layoutX="14.0" layoutY="180.0" prefHeight="180.0" prefWidth="500.0" />

    <!-- Add other UI elements such as buttons for saving/loading tasks -->

    <!-- Template selection area -->
    <Label layoutX="520.0" layoutY="14.0" text="Templates" />
    <ListView fx:id="templateListView" layoutX="520.0" layoutY="40.0" prefHeight="100.0" prefWidth="250.0" />
    <Button layoutX="640.0" layoutY="150.0" text="Save Template" onAction="#saveTemplate" />
    <Button layoutX="520.0" layoutY="150.0" text="Load Template" onAction="#loadTemplate" />


    <Button layoutX="14.0" layoutY="360.0" text="Backup Tasks" onAction="#backupTasks" />
    <Button layoutX="100.0" layoutY="360.0" text="Restore Tasks" onAction="#restoreBackup" />
    <!-- File Import/Export -->
    <Button layoutX="200.0" layoutY="360.0" text="Import Tasks" onAction="#importTasks" />
    <Button layoutX="300.0" layoutY="360.0" text="Export Tasks" onAction="#exportTasks" />

    <!-- TaskSelectionPane -->
    <Button layoutX="14.0" layoutY="400.0" text="Save Tasks" onAction="#saveTasks" />
    <Button layoutX="100.0" layoutY="400" text="Load Tasks" onAction="#convertToTemplate" />

    <!-- Notification area using TextArea -->
    <TextArea fx:id="notificationArea" layoutX="14.0" layoutY="450.0" prefWidth="500.0" prefHeight="50.0" editable="false" wrapText="true" />
</AnchorPane>
